{
  "name": "title-content",
  "displayName": "标题+内容",
  "description": "标题和内容的组合组件，支持多级标题和富文本内容",
  "version": "1.0.0",
  "category": "basic",
  "icon": "📄",
  "properties": {
    "title": {
      "type": "string",
      "label": "标题",
      "defaultValue": "标题文本",
      "required": true,
      "description": "显示的标题文本"
    },
    "content": {
      "type": "textarea",
      "label": "内容",
      "defaultValue": "内容文本",
      "required": true,
      "description": "显示的内容文本"
    },
    "titleLevel": {
      "type": "select",
      "label": "标题级别",
      "defaultValue": "h2",
      "options": [
        {"value": "h1", "label": "一级标题"},
        {"value": "h2", "label": "二级标题"},
        {"value": "h3", "label": "三级标题"},
        {"value": "h4", "label": "四级标题"}
      ],
      "description": "标题的HTML级别"
    },
    "titleStyle": {
      "type": "textarea",
      "label": "标题样式",
      "defaultValue": "font-size: 18px; font-weight: bold; margin-bottom: 8px;",
      "description": "标题的CSS样式"
    },
    "contentStyle": {
      "type": "textarea",
      "label": "内容样式",
      "defaultValue": "font-size: 14px; line-height: 1.5; color: #666;",
      "description": "内容的CSS样式"
    }
  },
  "variables": [
    "title", "content"
  ],
  "defaultSpan": {
    "rowSpan": 1,
    "colSpan": 2
  }
}