{
  "name": "line-chart",
  "displayName": "折线图",
  "description": "基于ECharts的折线图组件，适合展示趋势数据",
  "version": "1.0.0",
  "category": "chart",
  "icon": "📈",
  "properties": {
    "title": {
      "type": "string",
      "label": "图表标题",
      "defaultValue": "折线图标题",
      "description": "图表的标题"
    },
    "xAxisData": {
      "type": "textarea",
      "label": "X轴数据",
      "defaultValue": "{{x_data}}",
      "description": "X轴的数据数组（JSON格式）"
    },
    "seriesData": {
      "type": "textarea",
      "label": "系列数据",
      "defaultValue": "{{series_data}}",
      "description": "图表的系列数据（JSON格式）"
    },
    "smooth": {
      "type": "checkbox",
      "label": "平滑曲线",
      "defaultValue": true,
      "description": "是否显示为平滑曲线"
    },
    "showSymbol": {
      "type": "checkbox",
      "label": "显示数据点",
      "defaultValue": true,
      "description": "是否显示数据点标记"
    },
    "height": {
      "type": "string",
      "label": "图表高度",
      "defaultValue": "300px",
      "description": "图表容器的高度"
    }
  },
  "variables": [
    "x_data", "series_data"
  ],
  "defaultSpan": {
    "rowSpan": 2,
    "colSpan": 2
  }
}