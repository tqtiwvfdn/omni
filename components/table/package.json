{
  "name": "table",
  "displayName": "表格",
  "description": "数据表格组件，支持动态列和数据绑定",
  "version": "1.0.0",
  "category": "data",
  "icon": "📋",
  "properties": {
    "columns": {
      "type": "textarea",
      "label": "列定义",
      "defaultValue": "[\"列1\", \"列2\", \"列3\"]",
      "description": "表格列定义（JSON数组格式）"
    },
    "data": {
      "type": "textarea",
      "label": "表格数据",
      "defaultValue": "{{table_data}}",
      "description": "表格数据（JSON数组格式）"
    },
    "striped": {
      "type": "checkbox",
      "label": "斑马纹",
      "defaultValue": true,
      "description": "是否显示斑马纹样式"
    },
    "bordered": {
      "type": "checkbox",
      "label": "边框",
      "defaultValue": true,
      "description": "是否显示表格边框"
    }
  },
  "variables": ["table_data"],
  "defaultSpan": {"rowSpan": 2, "colSpan": 3}
}