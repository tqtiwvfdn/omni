{
  "name": "paragraph",
  "displayName": "段落",
  "description": "文本段落组件，支持富文本和样式设置",
  "version": "1.0.0",
  "category": "content",
  "icon": "📝",
  "properties": {
    "text": {
      "type": "textarea",
      "label": "文本内容",
      "defaultValue": "{{content}}",
      "required": true,
      "description": "段落的文本内容"
    },
    "fontSize": {
      "type": "string",
      "label": "字体大小",
      "defaultValue": "14px",
      "description": "文本字体大小"
    },
    "lineHeight": {
      "type": "string",
      "label": "行高",
      "defaultValue": "1.6",
      "description": "文本行高"
    },
    "color": {
      "type": "string",
      "label": "文字颜色",
      "defaultValue": "#333333",
      "description": "文字颜色"
    },
    "textAlign": {
      "type": "select",
      "label": "对齐方式",
      "defaultValue": "left",
      "options": [
        {"value": "left", "label": "左对齐"},
        {"value": "center", "label": "居中"},
        {"value": "right", "label": "右对齐"},
        {"value": "justify", "label": "两端对齐"}
      ],
      "description": "文本对齐方式"
    }
  },
  "variables": ["content"],
  "defaultSpan": {"rowSpan": 1, "colSpan": 2}
}